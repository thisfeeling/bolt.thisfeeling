FROM node:20.18.0

WORKDIR /app

# Instalar pnpm y wrangler, sin Corepack
RUN corepack disable && \
    npm install -g pnpm@8.15.4 wrangler

# Copiar archivos de dependencias
COPY package.json pnpm-lock.yaml ./

# Instalar dependencias
RUN pnpm install --no-strict-peer-dependencies

# Copiar código fuente y scripts
COPY . .

# Dar permisos correctos a bindings.sh
RUN tr -d '\r' < bindings.sh > bindings.tmp && \
    mv bindings.tmp bindings.sh && \
    chmod +x bindings.sh

# ---------- AUMENTAR MEMORIA DEL HEAP DE NODE ----------
# 4096 = 4 GB. Sube o baja según la RAM de tu servidor.
ENV NODE_OPTIONS=--max-old-space-size=4096
# -------------------------------------------------------

# Build de la aplicación
RUN pnpm run build

# Exponer puerto
EXPOSE 5173

# Variables de entorno en runtime
ENV NODE_ENV=production \
    RUNNING_IN_DOCKER=true

# Comando de arranque
CMD ["pnpm", "run", "dockerstart"]
